{
  "compilerOptions": {
    "target": "es5",
    "module": "es6",
    "sourceMap": true,
    "declaration": true,
    "lib": [ "es2015", "dom" ],
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "outDir": "lib-esm",
    "allowJs": false,
  },
  "include": ["src"],
  "exclude": ["node_modules", "webpack.config.js"]
}